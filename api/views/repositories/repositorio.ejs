<div class="row">

    <!-- coluna esquerda -->
    <div class="col-9 p-2">
        <!-- ambientes -->
        <div class="border-5 bg-white shadow-sm d-flex flex-column p-2">
            <h3 class="mb-1" style="text-align: center;">Ambientes</h3>
            <div class="w-100 mb-3" style="border: 1px; border-style: solid; border-color: rgba(175, 175, 175, 0.288);"></div>
            <!-- dev -->
            <div class="d-flex "> 
                    <div class="col-1 d-flex justify-content-center align-items-center"> 
                        <h5><b>DEV</b></h5>
                    </div>
                    <div class="col-9 "> 
